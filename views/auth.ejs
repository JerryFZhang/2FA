<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="/assets/img/favicon.ico">
    <title>Two Factor Authentication</title>
    <link href="/assets/css/bootstrap.min.css" rel="stylesheet">
    <link href="/assets/css/signin.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
</head>

<body class="text-center">
    <form class="form-signin">
        <h1 class="h3 mb-3 font-weight-normal">Please Input Your Pin Number and Password</h1>
        <label for="pin" class="sr-only">Pin Number</label>
        <input type="number" id="pin" class="form-control" placeholder="Pin Number" required autofocus> &nbsp;
        <label for="password" class="sr-only">Password</label>
        <input type="password" id="password" class="form-control" placeholder="Password" required autofocus> &nbsp;
        <button class="btn btn-lg btn-primary btn-block" id="submit">Sign in</button>
    </form>
</body>
<script>
    $('#submit').click(function() {
        var password = $("#password").val();
        var token = $("#pin").val();
        $.post('/verify', {
            password: password,
            token: token,
            username: "123"
        }).done(function() {
            $(location).attr('href', 'logged-in.ejs');
        })
        .fail(function(data) {
            alert("Error: " + data);
        })
    });

</script>

</html>
